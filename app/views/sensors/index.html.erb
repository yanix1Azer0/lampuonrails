<p id="notice"><%= notice %></p>

<h1>Listing Sensors</h1>

<table id="sensors" class="table table-striped">
  <thead>
    <tr>
      <th>Nama</th>
      <th>Deskripsi</th>
      <th>Jenis</th>
      <th>Aksi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td><%= sensor.nama %></td>
        <td><%= sensor.deskripsi %></td>
        <td><%= sensor.jenis %></td>
        <td><%= link_to 'Tampil', sensor,class:'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_sensor_path(sensor),class:'btn btn-primary' %></td>
        <td><%= link_to 'Hapus', sensor, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sensor', new_sensor_path,class:'btn btn-primary' %>
